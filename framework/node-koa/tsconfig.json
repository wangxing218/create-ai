{
  "compilerOptions": {
    "target": "ESNext" ,
    "module": "commonjs" ,
    "allowJs": true ,
    "outDir": "./dist" ,
    "rootDir": "./" ,
    "removeComments": true ,
    "noEmit": false ,
    "strict": true ,
    "moduleResolution": "node" ,
    "baseUrl": "./" ,
    "paths": {
      "@/*": ["src/*"]
    } ,
    "typeRoots": ["src/type"],
    "allowSyntheticDefaultImports": true ,
    "esModuleInterop": true ,
    "skipLibCheck": true ,
    "forceConsistentCasingInFileNames": true ,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
